def mostWordsFound(sentences):
        """
        :type sentences: List[str]
        :rtype: int
        """
        maxi = 0
        for i in sentences:
            l = len(i.split())
            if l > maxi:
                maxi = l
        return maxi

sentences = ["alice and bob love leetcode", "i think so too", "this is great thanks very much"]
print(mostWordsFound(sentences))